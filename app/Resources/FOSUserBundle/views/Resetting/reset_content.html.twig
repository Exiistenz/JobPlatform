{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
	<div class="container">

		<center><h2>Mot de passe perdu</h2></center>

		<hr /><br />

		<div id="collapseOne" class="accordion-body collapse in">
			{% if invalid_username is defined %}
				<div class="col-sm-12 alert alert-danger text-center">
					<p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
				</div>
			{% endif %}
			
			<div class="accordion-inner col-ms-12">
				<div class="col-md-5">
					<h4>Récupération du mot de passe ?</h4>
					<em>
						Compléter le formulaire, votre mot de passe sera alors réinitialiser.<br /><br />
						Une fois validé, vous devrez utiliser le nouveau mot de passe que vous avez défini.
					</em>
				</div>

				<div class="col-md-2"></div>

				<div class="col-ms-5">
					<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
						{# {{ form_widget(form.username) }} #}
						<label for="username">{{ 'security.login.username'|trans }}</label>
						<input class="form-control login-input" type="text" id="username" name="_username" required autofocus/><i class="fa fa-user"></i>
						<input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
