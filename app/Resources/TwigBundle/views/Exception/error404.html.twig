                                    <li><a href="{{ path('page_contact') }}"><i class="fa fa-envelope"></i>&nbsp;  Contact Support</a></li>
                                </ul>
                            </li>
                            {% endif %}   
                            <li class="searchForm">{{ render(controller('CoreBundle:News:searchForm', { 'limit': 2 }), { 'strategy': 'esi'}) }}</li>    
                        </ul>
                    </div>
                </div>
            </div> <!-- /#main-nav -->
