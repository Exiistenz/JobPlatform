                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, {{ app.user.username }} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-cogs"></i>&nbsp;  Editer mes informations</a></li>
                                    <li><a href="{{ path('fos_user_change_password') }}"><i class="fa fa-cog"></i>&nbsp;  Changer de mot de passe</a></li>
                                    <li><a href="{{ path('page_contact') }}"><i class="fa fa-envelope"></i>&nbsp;  Contact Support</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i>&nbsp;  Déconnexion</a></li>
                                </ul>
                            </li>
                            {% else %}
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, User <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-sign-in"></i>&nbsp;  Nous rejoindre</a></li>
