        <header id="home">

            {{ render(controller('CoreBundle:Core:showCarousel', { 'limit': 2 }), { 'strategy': 'esi'}) }}

            <div class="main-nav">
                <div class="container">
                     <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="glyphicon glyphicon-align-justify"></span>
                        </button>
                        {# <a class="navbar-brand" href="{{ path('core_homepage') }}">
                            <h1><img class="img-responsive" src="images/logo.png" alt="logo"></h1>
                        </a> #}                   
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">                 
                            <li><a href="{{ path('core_homepage') }}">Accueil</a></li>

                            {{ render(controller('CoreBundle:Core:showSectionNews'), { 'strategy': 'esi'}) }}

                            <li><a href="http://forum.never4get.fr">Forum</a></li>

                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if is_granted('ROLE_RESP') %}
                                <li class="dropdown">
                                    <a href="{{ path('core_admin') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admins <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('admin_news') }}"><i class="fa fa-newspaper-o"></i>&nbsp;  Gestion des News</a></li>
                                        <li><a href="{{ path('admin_section') }}"><i class="fa fa-gamepad"></i>&nbsp;  Gestion des Sections</a></li>
                                        <li><a href="{{ path('admin_user') }}"><i class="fa fa-user-plus"></i>&nbsp; Gestion des Users</a></li>

                                        {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="{{ path('admin_header') }}"><i class="fa fa-picture-o"></i>&nbsp; Gestion des Slides</a></li>
                                        <li><a href="{{ path('admin_partenaire') }}"><i class="fa fa-external-link-square"></i>&nbsp; Gestion des Partenaires</a></li>
                                        <li><a href="{{ path('admin') }}"><i class="fa fa-folder-o"></i>&nbsp; Gestion des Pages</a></li>
                                        {% endif %}
                                    </ul>
                                </li>
                                {% endif %}
                            {% endif %}

                            {# <li><a href="#">Tournois</a> </li> #}

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Informations <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    {{ render(controller('PagesBundle:Pages:menu', { 'limit': 2 }), { 'strategy': 'esi'}) }}
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About us <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('core_staffs') }}"><i class="fa fa-user-plus"></i>&nbsp;  Staff</a></li>
                                    <li><a href="{{ path('core_members') }}"><i class="fa fa-user-plus"></i>&nbsp;  Membres</a></li>
